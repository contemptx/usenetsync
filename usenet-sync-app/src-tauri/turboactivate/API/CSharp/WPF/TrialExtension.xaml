<Window x:Class="wyDay.TurboActivate.TrialExtension"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Trial extension" Height="245.946" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Label DockPanel.Dock="Top">Paste your trial extension here:</Label>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_OK" IsDefault="True" Margin="5" Name="btnOK" Click="btnOK_Click" Padding="10,3" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" Padding="10,3" />
        </StackPanel>

        <!-- default is to fill -->
        <TextBox Name="txtExtension" TextWrapping="Wrap" Text="" AcceptsReturn="True" Margin="5,10,5,10"/>
    </DockPanel>
</Window>
