{
  "servers": [
    {
      "name": "Primary Server",
      "hostname": "news.example.com",
      "port": 563,
      "username": "your_username",
      "password": "your_password",
      "use_ssl": true,
      "max_connections": 4,
      "enabled": true,
      "priority": 1,
      "posting_group": "alt.binaries.test"
    }
  ],
  "storage": {
    "database_path": "data/usenetsync.db",
    "temp_directory": "temp",
    "log_directory": "logs"
  },
  "security": {
    "encryption_algorithm": "AES-256-GCM",
    "key_derivation": "PBKDF2",
    "iterations": 100000,
    "message_id_domain": null,
    "_comment_message_id": "Set to null to use default @ngPost.com, or specify custom domain for Message-ID headers",
    "obfuscate_headers": true,
    "_comment_obfuscate": "When true, uses random Message-IDs and subjects for complete privacy"
  },
  "performance": {
    "max_upload_threads": 4,
    "max_download_threads": 4,
    "segment_size": 1048576,
    "compression_enabled": true
  },
  "logging": {
    "level": "INFO",
    "max_log_size": 10485760,
    "backup_count": 5
  }
}