# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary
