{
  "repository": {
    "url": "https://github.com/contemptx/usenetsync.git",
    "branch": "main",
    "remote": "origin"
  },
  "deployment": {
    "auto_commit": true,
    "commit_message_template": "Production deployment - {timestamp}",
    "create_release": false,
    "tag_format": "v{version}",
    "exclude_patterns": [
      "*.pyc",
      "__pycache__",
      "*.log",
      ".vscode",
      ".idea",
      "node_modules",
      "venv",
      ".env",
      "secure_config.py",
      "*.db",
      "data/*",
      "logs/*",
      "temp/*",
      ".temp/*",
      "upload/*",
      "download/*",
      "*.backup_*",
      ".git",
      ".gitignore"
    ]
  },
  "github": {
    "create_workflows": true,
    "create_issues_templates": true,
    "create_pr_template": true
  },
  "validation": {
    "check_syntax": true,
    "run_tests": false,
    "lint_code": false
  }
}