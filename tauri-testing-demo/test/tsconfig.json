{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "webdriverio/async", "@wdio/mocha-framework", "expect-webdriverio"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../wdio.conf.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}