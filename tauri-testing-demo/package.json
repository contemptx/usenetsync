{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test:e2e": "wdio run wdio.conf.ts",
    "test:visual": "wdio run wdio.conf.ts --spec test/specs/visual.test.ts",
    "test:app": "wdio run wdio.conf.ts --spec test/specs/app.test.ts",
    "test:debug": "wdio run wdio.conf.ts --logLevel debug",
    "test:ci": "CI=true npm run test:e2e",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "visual:update": "wdio run wdio.conf.ts --spec test/specs/visual.test.ts --update-visual-baseline",
    "ai:triage": "python scripts/ai_triage.py",
    "ai:autofix": "python scripts/apply_autofix.py"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.31.1",
    "@percy/webdriverio": "^3.3.1",
    "@tauri-apps/cli": "^2.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@wdio/allure-reporter": "^9.19.1",
    "@wdio/cli": "^9.19.1",
    "@wdio/local-runner": "^9.19.1",
    "@wdio/mocha-framework": "^9.19.1",
    "@wdio/spec-reporter": "^9.19.1",
    "@wdio/visual-service": "^9.0.0",
    "allure-commandline": "^2.34.1",
    "node-fetch": "^3.3.2",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "webdriverio": "^9.19.1"
  }
}
